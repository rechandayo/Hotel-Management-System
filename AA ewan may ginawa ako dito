        static string paymentMethod()
        {
        Console.Clear();

        Console.WriteLine("1. Card");
        Console.WriteLine("2. Gcash");
        Console.WriteLine("3. Paypal");

        int choice;
        do
        {
            Console.Write("Select Payment Method: ");
            
            choice = int.Parse(Console.ReadLine());

            if (choice < 1 || choice > 3)
            {
                Console.WriteLine("Invalid choice. Please enter a number between 1 and 3.");
            }
        } while (choice < 1 || choice > 3);

        switch (choice)
        {
            case 1:
                return "Card";
            case 2:
                return "Gcash";
            case 3:
                return "Paypal";
            default:
                return string.Empty;
        }
    }

        static void Cardpayment(double Alltotal)
        {
            Console.Clear();
            Console.WriteLine("Payment Details: ");
            Console.Write("Enter your MPIN: ");
            string creditcardnumber = Console.ReadLine();

            Alltotal = total.Sum();
            Console.WriteLine($"Credit Card successful! Total amount charged: P{Alltotal:F2}\n");
            Console.ReadKey();
        }

        static void Paypalpayment(double Alltotal)
        {
            Console.Clear();
            Console.WriteLine("Payment Details:");
