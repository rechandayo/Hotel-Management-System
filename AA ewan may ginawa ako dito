        static void DateAndCost()
        {
            Console.Clear();

            Console.WriteLine();
            Console.WriteLine("******************************************");
            Console.WriteLine("*               Date of Stay             *");
            Console.WriteLine("******************************************");

            Console.Write("Check-in date (yyyy-MM-dd): ");
            startDate[index - 1] = GetValidDateInput();

            Console.Write("Check-out date (yyyy-MM-dd): ");
            endDate[index - 1] = GetValidDateInput();

            daysDifference[index - 1] = (int)(endDate[index - 1] - startDate[index - 1]).TotalDays;
            Console.WriteLine($"You will be staying for {daysDifference[index - 1]} days.");

            Console.ReadKey();

        }
        static void finalbookingdetails()
        {
            Console.Clear();

            for (int i = 0; i < index; i++)
            {
                finalname[i] = name[i];
                finalstartDate[i] = startDate[i];
                finalendDate[i] = endDate[i];
                finaldaysDifference[i] = daysDifference[i];
                finalroom[i] = roomchoice[i];
                finaladultno[i] = adultno[i];
                finaltotal[i] = total[i];
                finalpaymentmeth[i] = paymentmeth[i];


                Console.WriteLine("");
                Console.WriteLine("Booking Details : Complete/Incomplete");
                Console.WriteLine($"Book #{i + 1} : ");
                Console.WriteLine("Name: " + finalname[i]);
                Console.WriteLine("Check-in Date: " + finalstartDate[i]);
                Console.WriteLine("Check-out Date: " + finalendDate[i]);
                Console.WriteLine("Days to stay: " + finaldaysDifference[i]);
                Console.WriteLine("Room Choice: " + finalroom[i]);
                Console.WriteLine("Residents: " + finaladultno[i]);
                Console.WriteLine("Total Cost: " + finaltotal[i]);
                Console.WriteLine("Payment method: " + finalpaymentmeth[i]);
                Console.WriteLine("");

            }

            Console.ReadKey();

        }

        static void Payment()
        {
            paymentmeth[index - 1] = paymentMethod();

            if (paymentmeth[index - 1] == "Card")
            {
                Cardpayment(total[index - 1]);
            }
            else if (paymentmeth[index - 1] == "Gcash")
            {
                gcashpayment(total[index - 1]);
            }
            else if (paymentmeth[index - 1] == "Paypal")
            {
                Paypalpayment(total[index - 1]);
            }

        }
        static void confirmation()
        {

            bool validChoice = false;

            Console.WriteLine("\n\n\nNavigation Options:");
            Console.WriteLine("1. Proceed to Payment");
            Console.WriteLine("2. Book another");
            Console.WriteLine("3. Change Booking Details");

            Console.Write("What do you want to do: ");

            while (!validChoice)
            {

                if (int.TryParse(Console.ReadLine(), out int homeChoice))
                {
                    switch (homeChoice)
                    {
                        case 1:
                            retry = 'n';
                            Payment();
                            validChoice = true;
                            finalbookingdetails();
                            break;
                        case 2:
                            retry = 'y';
                            Welcome();
                            validChoice = true;
                            break;
                        case 3:
                            Askwhattochange();
                            validChoice = true;
                            break;
                        default:
                            Console.WriteLine("Invalid choice. Please enter 1 or 2.");
                            break;
                    }
                }
                else
                {
                    Console.Write("Invalid input. Please enter a number: ");
                }
            }


        }
        static void Askwhattochange()
        {
            Console.WriteLine("What detail do you want to change?");
            Console.WriteLine("1. Change Basic info");
            Console.WriteLine("2. Change the Booking Date and Room");

            bool validchoice = false;
            
            while (!validchoice)
            {
            if (int.TryParse(Console.ReadLine(), out int choice))
            {
                switch (choice)
                {
                    case 1: 
                    Basicinfo();
                    Incompletebookingdetails();
                    confirmation();
                    validchoice = true;
                    break;
                    case 2:
                    DateAndCost();
                    RoomType();
                    GetTotalPrice();
                    Incompletebookingdetails();
                    confirmation();
                    validchoice = true;
                    break;
                    default:
                    Console.WriteLine("Invalid choice. Please enter 1 or 2.");
                    break;
                }
            }
            else
            {
                Console.Write("Invalid input. Please enter a number: ");
            }
            }
        }
        static void Incompletebookingdetails()
        {


            Console.Clear();

            finalroom[index - 1] = roomchoice[index - 1];

            Console.WriteLine("");
            Console.WriteLine("Booking Details : Incomplete "); ;
            Console.WriteLine("Name: " + name[index - 1]);
            Console.WriteLine("Check-in Date: " + startDate[index - 1]);
            Console.WriteLine("Check-out Date: " + endDate[index - 1]);
            Console.WriteLine("Days to stay: " + daysDifference[index - 1]);
            Console.WriteLine("Room Choice: " + roomchoice[index - 1]);
            Console.WriteLine("Residents: " + adultno[index - 1]);
            Console.WriteLine("Total Cost: " + total[index - 1]);
            Console.WriteLine("");

        }
        static void ReserveRoom(int roomIndex, string roomType, DateTime[] startDate, DateTime[] endDate)
        {
            
            if (rooms[roomIndex] && !(endDate[index - 1] <= startDate[index - 1] || startDate[index - 1] >= endDate[index - 1]))
            {
                Console.WriteLine($"The {roomType} room is already reserved. Please choose another room.");
                Console.ReadLine();
                RoomType();
            }
            else
            {
                Console.WriteLine($"The {roomType} room has been reserved successfully!");
                Console.ReadLine();
            }
        }
        static void GetTotalPrice()
        {
            total[index - 1] = adultno[index - 1] * (daysDifference[index - 1] * costperday);

            Console.WriteLine($"The total cost for {roomchoice[index - 1]} with {daysDifference[index - 1]} number of days and {adultno[index - 1]} residents is : P" + total[index - 1]);

            Console.ReadKey();
        }
    }
}
